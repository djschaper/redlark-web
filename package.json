{
  "name": "redlark",
  "version": "0.6.5",
  "appId": "com.schaper.redlark",
  "private": true,
  "main": "src/app.js",
  "author": "Derek Schaper",
  "description": "A tool for worship set planning.",
  "repository": {
    "type": "git",
    "url": "https://github.com/djschaper/redlark-web.git"
  },
  "scripts": {
    "start": "electron .",
    "start:dev": "nodemon --watch * --ext js,html,css --exec \"electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --x64 --ia32 --win",
    "release": "build --x64 --ia32 --win"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "aws-sdk": "^2.270.1",
    "cheerio": "^1.0.0-rc.2",
    "dotenv": "^6.0.0",
    "electron-updater": "^4.0.6",
    "glob": "^7.1.2",
    "googleapis": "^39.1.0",
    "moment": "^2.24.0",
    "mysql2": "^1.5.3",
    "opn": "^5.4.0",
    "password-hash": "^1.2.2",
    "puppeteer": "^1.16.0",
    "sequelize": "^5.15.1",
    "sequelize-cli": "^4.0.0",
    "sortablejs": "^1.9.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "archiver-promise": "^1.0.0",
    "bluebird": "^3.5.1",
    "dropbox": "^4.0.7",
    "electron": "^4.1.4",
    "electron-builder": "^20.40.2",
    "fs-extra": "^6.0.1",
    "isomorphic-fetch": "^2.2.1",
    "nodemon": "^1.18.11",
    "prompt-promise": "^1.0.3"
  },
  "build": {
    "appId": "com.schaper.redlark",
    "productName": "Redlark",
    "files": [
      "src/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    }
  }
}
